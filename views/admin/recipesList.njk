{% extends "admin/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="../../styles/recipesList.css">
{% endblock %}

{% block mainContent %}
  <section id="recipes__section--admin">
    <h2 class="section__title section__title--primary">Gerenciar receitas</h2>
    <div class="recipes__list">
      {% for recipe in recipes %}
        <div id="recipes__list-item--{{ recipe.id }}" class="recipes__list-item">
          <div class="recipes__list-item-image-container">
            <img class="recipes__list-item-image" src="{{ recipe.image }}" alt="Imagem da receita {{ recipe.title }}"/>
          </div>
          <div class="recipes__list-item-infos">
            <h4 class="recipes__list-item-title">{{ recipe.title }}</h4>
            <span class="recipes__list-item-author">por {{ recipe.author }}</span>
            <button class="recipes__list-item-button button button--link">Visualizar</button>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock %}

{% block scriptsImport %}
  <script type="module" src="../../scripts/home.js"></script>
{% endblock %}